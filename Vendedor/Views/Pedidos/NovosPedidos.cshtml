@model IEnumerable<Vendedor.Models.Pedidos>

@{
    ViewBag.Title = "NovosPedidos";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>NovosPedidos</title>
</head>
<body>
    <h2>Novos Pedidos - A Enviar</h2>
    <br /><br />
    <p>
        @Html.ActionLink("Retornar ao Menu", "../home/index")
    </p>
    <br /><br />

    <table width="800" border="1" class="table">
        <tr>
            <th width="50">
               <b>Código</b>
            </th>
            <th width="100">
                @Html.DisplayNameFor(model => model.CPF)
            </th>
            <th width="250">
                <b>Nome do Cliente</b>
                @*@Html.DisplayNameFor(model => model.NomeCliente)*@
            </th>
            <th width="200">
                @Html.DisplayNameFor(model => model.Produto)
            </th>
            <th width="50">
                @Html.DisplayNameFor(model => model.Quantidade)
            </th>
            <th width="50">
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th width="100">&nbsp;</th>
        </tr>
    
    @foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Cod)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CPF)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NomeCliente)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Produto)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Quantidade)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Status)
        </td>
        <td>
            @Html.ActionLink("Confirmar Envio", "MudarStatus/" + item.Cod.ToString());

           
        <td>
            @if (item.Status == "FEITO")
            {
                @Html.ActionLink("Cancelar Entrega", "VendedorCancelarPedidoNaoEnviado/" + item.Cod.ToString())
            }
        </td>
            @*@Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
            @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
            @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })*@
        </td>
    </tr>
    }
    
    </table>
</body>
</html>
