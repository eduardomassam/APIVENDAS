@model Cliente.Models.Pedidos


@{
    ViewBag.Title = "NovoPedido";
}


<div class="my-div-class">
    @Html.ActionLink("Voltar", "Listar", "Pedidos", new { cpf = ViewBag.CPF }, new { @class = "btn btn-primary btn-lg" })
    @if (ViewBag.MensagemErro != null)
    {
        <h1 align="center" style="color:red">
            <div class="alert alert-danger">@ViewBag.MensagemErro</div>
        </h1>
    }
</div>



@if (ViewBag.CPF != null)
{
    <h2 align="center">Novo Pedido - @ViewBag.CPF</h2>
}
else
{
    <h2>Novo Pedido</h2>
}



